{% extends "base.html.twig" %}
{% block title %}You are logged in{% endblock %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    <h1>Bienvenue sur Show My Picture</h1>
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="wrapper">
            <!-- Sidebar -->
            <nav id="sidebar">
                <div class="sidebar-header">
                    <h3>Show my picture</h3>
                </div>

                <ul class="list-unstyled components">
                    <p>Make your choice</p>
                    <li class="active">
                        <a href="#homeSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">Actions</a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                            <li>
                                <a href="#">Update your profile</a>
                            </li>
                            <li>
                                <a href="#">Upload a picture</a>
                            </li>
                            <li>
                                <a href="{{ path('app_goldenbook') }}">Comment the website</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">About</a>
                    </li>
                    <li>
                        <a href="#pageSubmenu" data-toggle="collapse" aria-expanded="false" class="dropdown-toggle">To see</a>
