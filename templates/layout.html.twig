                            <li>
                                <a href="#">My pictures</a>
                            </li>
                            <li>
                                <a href="#">My profile</a>
                            </li>
                            <li>
                                <a href="{{ path('app_allcomments') }}">All the comments</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="#">Portfolio</a>
                    </li>
                    <li>
                        <a href="#">Contact</a>
                    </li>
                </ul>
            </nav>

            <div id="content">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                    <div class="container-fluid">
                        <button type="button" id="sidebarCollapse" class="btn btn-info">
                            <i class="fas fa-align-left"></i>
                            <span>Menu</span>
                        </button>
                    </div>
                </nav>
            </div>
            {% block subbody %}
            {% endblock %}
        </div>
    {% endif %}
{% endblock %}