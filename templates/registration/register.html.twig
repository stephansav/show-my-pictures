{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {{ parent() }}

    <div class="container">
        <h1>Register</h1>

        {{ form_start(registrationForm) }}
            <text>{{ form_row(registrationForm.pseudo) }}</text>
            <text>{{ form_row(registrationForm.dateOfBirth) }}</text>
            <text>{{ form_row(registrationForm.email) }}</text>
            <text>{{ form_row(registrationForm.plainPassword) }}</text>
            <text>{{ form_row(registrationForm.description) }}</text>
            <text>{{ form_row(registrationForm.agreeTerms) }}</text>
            <button class="btn btn-primary">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
